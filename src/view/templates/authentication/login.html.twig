{% extends 'layout.html.twig' %}

{% block content %}
<section class='pt-5 mt-5'> 
  <div class="container">
    {% if checking.email %}
      <div class="alert alert-danger" role="alert">
        Rentré un email valide
      </div>
    {% endif %}
    {% if checking.mdp %}
      <div class="alert alert-danger" role="alert">
        Rentré un mot de passe de plus de 13 caractère
      </div>
    {% endif %}
    {% if alert == 'mdp' %}
      <div class="alert alert-danger" role="alert">
        Vous avez fais une faute dans votre mot de passe
      </div>
    {% endif %}
    {% if alert == 'email' %}
      <div class="alert alert-danger" role="alert">
        Ce compte n'existe pas
      </div>
    {% endif %}
    <h1 class="text-center">Login</h1>
    <form method="post" action="/auth/login" class="needs-validation" novalidate>
      <div class="row">
      <div class="col-6">
        <label for="FormControlInput1">Email</label>
        <input class="form-control" type="text" name="email" id="FormControlInput1" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput2">Mot de passe</label>
        <input type="password" name="mdp" class="form-control" id="FormControlInput2" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      
      <div class="col text-center mt-4">
      <button type="submit" class="btn btn-secondary">Confirme</button>
      <a href="/auth/resetpassword" class="btn btn-secondary">Oublie de mot de passe</a>
      </div>
    </div>
    </form>
  </div>
</section>
{% endblock %}