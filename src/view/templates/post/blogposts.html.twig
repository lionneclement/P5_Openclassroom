      <div class="row">
        {% for n in nom %}
          <div class="col-sm-6 pt-5">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">{{n.titre}}</h5>
                <p class="card-text">{{n.chapo}}</p>
                <p class="card-text">Derni√®re modification: {{n.date}}</p>
                <a href="post/{{n.id}}" class="btn btn-primary">Voir plus</a>
                <a href="updatepost/{{n.id}}" class="btn btn-primary">Modifier</a>
                <a href="removepost/{{n.id}}" class="btn btn-primary">Supprimer</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}