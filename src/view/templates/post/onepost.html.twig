{% extends 'layout.html.twig' %}

{% block content %}
    <div class='container text-center pt-5'>
      <div class='row'>
        {% for n in nom %}
          <div class='col-12'>
            <h1>{{n.id}}</h1>
            <p>{{n.titre}}</p>
            <p>{{n.chapo}}</p>
            <p>{{n.contenu}}</p>
            <p>{{n.date}}</p>
            <p>{{n.user_id}}</p>
          </div>
          {% if access and access >= 2 %}
            <div class='container text-center'>
              <a href="/updatepost/{{n.id}}" class="btn btn-primary">Modifier</a>
              {% if access == 3 %}  
                <a href="/removepost/{{n.id}}" class="btn btn-primary">Supprimer</a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
{% endblock %}