{% extends 'layout.html.twig' %}

{% block content %}
<section> 
  <div class="container py-5 mt-5">
    <h1 class="text-center">Modifier votre profil</h1>
    <form method="post" action="/updateuser" class="needs-validation" novalidate>
      <div class="row">
      <div class="col-6">
        <label for="FormControlInput1">Nom</label>
        <input type="text" name="nom" class="form-control" id="FormControlInput1" value='{{user['nom']}}' required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput2">Prenom</label>
        <input type="text" name="prenom" class="form-control" id="FormControlInput2" value='{{user['prenom']}}' required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput3">Email</label>
        <input type="email" name="email" class="form-control" id="FormControlInput3" value='{{user['email']}}' required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col text-center mt-4">
      <button type="submit" class="btn btn-secondary">Confirm identity</button>
      </div>
    </div>
    </form>
  </div>
</section>
{% endblock %}