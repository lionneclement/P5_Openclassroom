{% extends 'layout.html.twig' %}

{% block content %}
<section class='pt-5 mt-5'> 
  <div class="container">
    <div class='text-center'>
      {% if alert == 'success' %}
      <div class="alert alert-success" role="alert">
        Votre compte viens d'être crée vous pouvez vous connecter.
      </div
      {% elseif alert == 'already' %}
        <div class="alert alert-danger" role="alert">
          Ce compte exite déjà.
        </div>
      {% endif %}
      {% if checking.email %}
        <div class="alert alert-danger" role="alert">
          Rentré un email valide
        </div>
      {% endif %}
      {% if checking.mdp %}
        <div class="alert alert-danger" role="alert">
          Rentré un mot de passe valide
        </div>
      {% endif %}
      {% if checking.nom %}
        <div class="alert alert-danger" role="alert">
          Rentré un nom valide
        </div>
      {% endif %}
      {% if checking.prenom %}
        <div class="alert alert-danger" role="alert">
          Rentré un prénom valide
        </div>
      {% endif %}
    </div>
    <h1 class="text-center">Register</h1>
    <form method="post" action="/register" class="needs-validation" novalidate>
      <div class="row">
      <div class="col-6">
        <label for="FormControlInput1">Nom</label>
        <input type="name" name="nom" class="form-control" id="FormControlInput1" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput2">Prénom</label>
        <input type="name" name="prenom" class="form-control" id="FormControlInput2" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput3">Email</label>
        <input class="form-control" type="email" name="email" id="FormControlInput3" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      <div class="col-6">
        <label for="FormControlInput4">Mot de passe</label>
        <input type="password" name="mdp" class="form-control" id="FormControlInput4" required>
        <div class="invalid-feedback">
          Ce champ est obligatoire.
        </div>
      </div>
      
      <div class="col text-center mt-4">
      <button type="submit" class="btn btn-secondary">Confirme</button>
      </div>
    </div>
    </form>
  </div>
</section>
{% endblock %}