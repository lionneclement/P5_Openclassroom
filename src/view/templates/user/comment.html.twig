{% extends 'layout.html.twig' %}

{% block content %}
    <div class='container text-center pt-5'>
      {% if comment is empty %}
          <div class="alert alert-danger pt-5 mt-3" role="alert">
            <h4 class="alert-heading">Aucun commentaire !</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
          </div>
        {% endif %}
      <div class="row">
        {% for n in comment %}
          <div class="col-sm-6 pt-5">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Message: {{n.message}}</h5>
                <p class="card-text">Date: {{n.date}}</p>
                <p class="card-text">Article_id: {{n.article_id}}</p>
                <form method="post" action="/admin/{{return}}">
                  <label for="FormControlInput1">Statut :</label>
                  <select id="inputState"  name="statut" class="form-control">
                    <option {% if n.statut == 1 %}selected{% endif %}>Valide</option>
                    <option {% if n.statut == 0 %}selected{% endif %}>Invalide</option>
                  </select>
                  <input type="hidden" name="id" value="{{n.id}}">
                  <br>
                  <button type="submit" class='btn btn-secondary'>Modifier</button>
                  <a href="/admin/deletecomment/{{n.id}}/{{return}}"class='btn btn-secondary'>Supprimer</a>
                </form>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}